{% extends "layouts/default.njk" %}

{% block bodyClass %}page-home{% endblock %}

{% block content %}
{% for block in page.content.blocks %}
  {% if block.type == 'hero' %}
  <section class="hero">
    <div class="container">
      <h1>{{ block.data.title }}</h1>
      <p class="subtitle">{{ block.data.subtitle }}</p>
      <p class="description">{{ block.data.description }}</p>
      <a href="{{ block.data.cta.url }}" class="btn btn-primary">{{ block.data.cta.text }}</a>
    </div>
  </section>
  
  {% elif block.type == 'projects-grid' %}
  <section class="projects" id="projects">
    <div class="container">
      <h2 class="section-title">{{ block.data.title }}</h2>
      <div class="projects-grid">
        {% for project in block.data.projects %}
        <a href="{{ project.url }}" class="project-card">
          <div class="project-image">
            <img src="{{ project.image }}" alt="{{ project.title }}">
            <div class="project-overlay">
              <span class="project-category">{{ project.category }}</span>
              <h3>{{ project.title }}</h3>
            </div>
          </div>
        </a>
        {% endfor %}
      </div>
    </div>
  </section>
  
  {% elif block.type == 'cta' %}
  <section class="cta">
    <div class="container">
      <h2>{{ block.data.title }}</h2>
      <p>{{ block.data.description }}</p>
      <a href="{{ block.data.buttonUrl }}" class="btn btn-primary btn-lg">{{ block.data.buttonText }}</a>
    </div>
  </section>
  {% endif %}
{% endfor %}
{% endblock %}
