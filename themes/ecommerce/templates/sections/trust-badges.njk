{# Trust Badges Section Template #}
<section class="trust-section section-trust-badges">
    <div class="container">
        {% if section.settings.title %}
            <div class="section-header">
                <h2>{{ section.settings.title }}</h2>
            </div>
        {% endif %}
        <div class="trust-grid">
            {% for item in section.settings.items %}
                <div class="trust-item">
                    <div class="trust-icon">
                        {% if item.icon == 'truck' %}
                            <svg width="40" height="40" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="12" width="24" height="14" rx="2"/><circle cx="9" cy="26" r="3"/><circle cx="23" cy="26" r="3"/><path d="M26 16h8l4 6v6h-12"/></svg>
                        {% elif item.icon == 'shield' %}
                            <svg width="40" height="40" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20 4l10 8v16l-10 8-10-8V12l10-8z"/><polyline points="12,20 18,26 28,14"/></svg>
                        {% elif item.icon == 'refresh' %}
                            <svg width="40" height="40" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M8 20a12 12 0 1 1 24 0"/><polyline points="8,12 8,20 16,20"/></svg>
                        {% elif item.icon == 'headphones' %}
                            <svg width="40" height="40" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M6 24V20a14 14 0 1 1 28 0v4"/><rect x="2" y="24" width="6" height="10" rx="2"/><rect x="32" y="24" width="6" height="10" rx="2"/></svg>
                        {% else %}
                            <svg width="40" height="40" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="20" cy="20" r="16"/><polyline points="12,20 18,26 28,14"/></svg>
                        {% endif %}
                    </div>
                    <h4>{{ item.title }}</h4>
                    <p>{{ item.desc }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
