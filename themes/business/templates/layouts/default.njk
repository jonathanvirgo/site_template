<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% if page.seoTitle %}{{ page.seoTitle }}{% else %}{{ page.title }}{% endif %} | {{ settings.site_name }}</title>
  <meta name="description" content="{{ page.seoDesc or page.excerpt or settings.site_tagline }}">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/themes/business/assets/css/theme.css">
</head>
<body class="{% block bodyClass %}{% endblock %}">
  <header class="site-header">
    <div class="container">
      <div class="header-inner">
        <a href="/" class="site-logo">{{ settings.site_name or 'Business' }}</a>
        
        <nav class="main-nav">
          <ul class="nav-list">
            {% if menus.main %}
              {% for item in menus.main %}
                <li><a href="{{ item.url }}">{{ item.label }}</a></li>
              {% endfor %}
            {% endif %}
          </ul>
        </nav>
        
        <div class="header-actions">
          <a href="/login" class="btn btn-ghost">Sign in</a>
          <a href="/pricing" class="btn btn-primary">Get started</a>
        </div>
      </div>
    </div>
  </header>

  <main class="site-main">
    {% block content %}{% endblock %}
  </main>

  <footer class="site-footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-brand">
          <span class="footer-logo">{{ settings.site_name }}</span>
          <p>{{ settings.site_tagline }}</p>
        </div>
        <div class="footer-links">
          <h4>Product</h4>
          <ul><li><a href="/pricing">Pricing</a></li><li><a href="/#features">Features</a></li></ul>
        </div>
        <div class="footer-links">
          <h4>Company</h4>
          <ul><li><a href="/about">About</a></li><li><a href="/contact">Contact</a></li></ul>
        </div>
        <div class="footer-links">
          <h4>Legal</h4>
          <ul><li><a href="/privacy">Privacy</a></li><li><a href="/terms">Terms</a></li></ul>
        </div>
      </div>
      <div class="footer-bottom">
        <p>{{ settings.footer_copyright }}</p>
      </div>
    </div>
  </footer>

  <script src="/themes/business/assets/js/theme.js"></script>
</body>
</html>
