<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}{{ page.seoTitle or page.title or 'Untitled' }}{% endblock %} | {{ settings.site_name or 'CMS' }}</title>
  <meta name="description" content="{{ page.seoDesc or page.excerpt or settings.site_description or '' }}">
  {% if page.seoKeywords %}<meta name="keywords" content="{{ page.seoKeywords }}">{% endif %}
  
  <!-- Open Graph -->
  <meta property="og:title" content="{{ page.seoTitle or page.title }}">
  <meta property="og:description" content="{{ page.seoDesc or page.excerpt }}">
  {% if page.featuredImage %}<meta property="og:image" content="{{ page.featuredImage }}">{% endif %}
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Theme Styles -->
  <link rel="stylesheet" href="/themes/developer-default/assets/css/theme.css">
  
  {% block head %}{% endblock %}
</head>
<body class="{% block bodyClass %}{% endblock %}">
  <!-- Header -->
  <header class="site-header">
    <div class="container">
      <div class="header-inner">
        <a href="/" class="site-logo">
          <span class="logo-text">{{ settings.site_name or 'CMS' }}</span>
        </a>
        
        <nav class="main-nav">
          {% if menus.main %}
            <ul class="nav-list">
              {% for item in menus.main %}
                <li class="nav-item {% if currentPath == item.url %}active{% endif %}">
                  <a href="{{ item.url }}">{{ item.label }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </nav>
        
        <div class="header-actions">
          <button class="theme-toggle" aria-label="Toggle dark mode">
            <svg class="icon-sun" viewBox="0 0 24 24"><path d="M12 18a6 6 0 1 1 0-12 6 6 0 0 1 0 12zm0-2a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM11 1h2v3h-2V1zm0 19h2v3h-2v-3zM3.515 4.929l1.414-1.414L7.05 5.636 5.636 7.05 3.515 4.93zM16.95 18.364l1.414-1.414 2.121 2.121-1.414 1.414-2.121-2.121zm2.121-14.85l1.414 1.415-2.121 2.121-1.414-1.414 2.121-2.121zM5.636 16.95l1.414 1.414-2.121 2.121-1.414-1.414 2.121-2.121zM23 11v2h-3v-2h3zM4 11v2H1v-2h3z"/></svg>
            <svg class="icon-moon" viewBox="0 0 24 24"><path d="M10 7a7 7 0 0 0 12 4.9v.1c0 5.523-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2h.1A6.979 6.979 0 0 0 10 7zm-6 5a8 8 0 0 0 15.062 3.762A9 9 0 0 1 8.238 4.938 7.999 7.999 0 0 0 4 12z"/></svg>
          </button>
          <button class="mobile-menu-toggle" aria-label="Toggle menu">
            <span></span>
            <span></span>
            <span></span>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="site-main">
    {% block content %}{% endblock %}
  </main>

  <!-- Footer -->
  <footer class="site-footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-brand">
          <a href="/" class="site-logo">
            <span class="logo-text">{{ settings.site_name or 'CMS' }}</span>
          </a>
          <p class="footer-tagline">{{ settings.site_tagline or '' }}</p>
          
          <div class="social-links">
            {% if settings.social_twitter %}
              <a href="{{ settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
                <svg viewBox="0 0 24 24"><path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/></svg>
              </a>
            {% endif %}
            {% if settings.social_github %}
              <a href="{{ settings.social_github }}" target="_blank" rel="noopener" aria-label="GitHub">
                <svg viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0 1 12 6.844a9.59 9.59 0 0 1 2.504.337c1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0 0 22 12.017C22 6.484 17.522 2 12 2z"/></svg>
              </a>
            {% endif %}
            {% if settings.social_linkedin %}
              <a href="{{ settings.social_linkedin }}" target="_blank" rel="noopener" aria-label="LinkedIn">
                <svg viewBox="0 0 24 24"><path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/></svg>
              </a>
            {% endif %}
          </div>
        </div>
        
        <div class="footer-links">
          <h4>Quick Links</h4>
          {% if menus.footer %}
            <ul>
              {% for item in menus.footer %}
                <li><a href="{{ item.url }}">{{ item.label }}</a></li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        
        <div class="footer-contact">
          <h4>Contact</h4>
          <ul>
            {% if settings.contact_email %}<li>{{ settings.contact_email }}</li>{% endif %}
            {% if settings.contact_phone %}<li>{{ settings.contact_phone }}</li>{% endif %}
          </ul>
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>{{ settings.footer_copyright or 'Â© ' + year + ' All rights reserved.' }}</p>
      </div>
    </div>
  </footer>

  <!-- Theme Scripts -->
  <script src="/themes/developer-default/assets/js/theme.js"></script>
  {% block scripts %}{% endblock %}
</body>
</html>
